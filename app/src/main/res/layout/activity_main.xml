<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aula_7.relativelayout.MainActivity">

    <!-- alinear a la izquierda en la parte superior-->


    <!-- alinear al centro en la parte superior-->

    <!-- alinear al centro en la parte superior-->



    <!-- alinear al centro en la parte del medio-->

    <TextView
        android:id="@+id/txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_4"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        />

    <!-- alinear al centro en la parte de abajo-->

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_2"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_above="@+id/txt_4"
        android:layout_alignRight="@+id/txt_4"
        android:layout_alignEnd="@+id/txt_4"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/txt_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_9"
        android:background="@color/colorAccent"
        android:padding="10dp"

        android:layout_below="@+id/txt_4"
        android:layout_alignLeft="@+id/txt_2"
        android:layout_alignStart="@+id/txt_2"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/txt_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_5"
        android:background="@color/colorAccent"
        android:padding="4dp"

        android:layout_alignBaseline="@+id/txt_4"
        android:layout_alignBottom="@+id/txt_4"
        android:layout_toRightOf="@+id/txt_4"
        android:layout_toEndOf="@+id/txt_4"

    />
    <TextView
        android:id="@+id/txt_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_6"
        android:background="@color/colorAccent"
        android:padding="10dp"

        android:layout_below="@+id/txt_2"
        android:layout_toLeftOf="@+id/txt_2"
        android:layout_toStartOf="@+id/txt_2" />


</RelativeLayout>